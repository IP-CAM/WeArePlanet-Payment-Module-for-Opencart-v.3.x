{{ header }}
<div class="container">
	<ul class="breadcrumb">
		{% for breadcrumb in breadcrumbs %}
		<li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
		{% endfor %}
	</ul>
	<div class="row">
		{{ column_left }}

		<div id="content"
			class="{% if column_left  and  column_right %}
    {{ 'col-sm-6' }}
    {% elseif  column_left or column_right %}
    {{  'col-sm-9' }}
    {% else %}
    {{  'col-sm-12' }}
    {% endif %}">
			{{ content_top }}
			<h1>
				{{ heading_title }}
			</h1>
			<div class="alert alert-danger">
				{{ text_message }}
			</div>
			{{ content_bottom }}
		</div>
		{{ column_right }}
	</div>
</div>
{{ footer }}